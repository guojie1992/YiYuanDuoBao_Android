<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/light_gray">
    <so.len.duobao.customView.TopMenuBar
        android:id="@+id/top_menu_bar_mine"
        style="@style/topMenuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </so.len.duobao.customView.TopMenuBar>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light_gray">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_top_activity_mine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:scaleType="fitXY"
                    android:src="@mipmap/my_top"/>

                <TextView
                    android:id="@+id/tv_username_activity_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_75"
                    android:layout_marginLeft="@dimen/dp_100"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:text=""/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_100"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <LinearLayout
                        android:id="@+id/ll_sign_activity_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_50"
                        android:paddingBottom="@dimen/dp_10"
                        android:layout_gravity="bottom"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_sign_activity_mine"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:src="@mipmap/my_sign"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="@string/sign"
                            android:textSize="@dimen/dp_14"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tv_signday_activity_mine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text=""
                            android:textSize="@dimen/dp_12"
                            android:textColor="@color/theme"/>
                    </LinearLayout>
                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@color/gray"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="bottom"
                            android:text="@string/month_back"
                            android:textColor="@color/black"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_m_activity_mine"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:padding="@dimen/dp_10"
                                    android:text=""
                                    android:textSize="@dimen/dp_15"
                                    android:textColor="@color/theme"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:padding="@dimen/dp_10"
                                    android:text="@string/MB"
                                    android:textSize="@dimen/dp_12"
                                    android:textColor="@color/darker_gray"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_point_activity_mine"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:padding="@dimen/dp_10"
                                    android:text=""
                                    android:textSize="@dimen/dp_15"
                                    android:textColor="@color/theme"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:padding="@dimen/dp_10"
                                    android:text="@string/points"
                                    android:textSize="@dimen/dp_12"
                                    android:textColor="@color/darker_gray"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_head_activity_mine"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_myorder_activity_mine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@mipmap/my_order"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/myorder"
                        android:textSize="@dimen/dp_13"
                        android:textColor="@color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_myrecommend_activity_mine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@mipmap/my_recommend"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/myrecommend"
                        android:textSize="@dimen/dp_13"
                        android:textColor="@color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mym_activity_mine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@mipmap/my_m"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/myM"
                        android:textSize="@dimen/dp_13"
                        android:textColor="@color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mypoint_activity_mine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@mipmap/my_point"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/mypoint"
                        android:textSize="@dimen/dp_13"
                        android:textColor="@color/darker_gray"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:id="@+id/ll_level_activity_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/my_level"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:text="@string/level"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"/>

                    <TextView
                        android:id="@+id/tv_level_activity_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_5"
                        android:text=""
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/dp_13"/>
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/right_arrow"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:id="@+id/ll_bank_activity_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/my_bank"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:text="@string/bank"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"/>

                    <TextView
                        android:id="@+id/tv_bank_activity_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_5"
                        android:text=""
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/dp_13"/>
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/right_arrow"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:id="@+id/ll_myrecommender_activity_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/my_recommender"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:text="@string/myrecommender"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"/>

                    <TextView
                        android:id="@+id/tv_myrecommender_activity_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_5"
                        android:text=""
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/dp_13"/>
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/right_arrow"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:id="@+id/ll_myback_activity_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/my_back"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:text="@string/myback"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"/>

                    <TextView
                        android:id="@+id/tv_myback_activity_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_5"
                        android:text=""
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/dp_13"/>
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/right_arrow"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:id="@+id/ll_mytreasure_activity_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/my_treasure"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:text="@string/mytreasure"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"/>

                    <TextView
                        android:id="@+id/tv_mytreasure_activity_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_5"
                        android:text=""
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/dp_13"/>
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/right_arrow"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:id="@+id/ll_myaddr_activity_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/my_addr"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:text="@string/myaddr"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"/>

                    <TextView
                        android:id="@+id/tv_myaddr_activity_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_5"
                        android:text=""
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/dp_13"/>
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/right_arrow"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray"/>
            </LinearLayout>


            <include
                android:id="@+id/root_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/root_view"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>