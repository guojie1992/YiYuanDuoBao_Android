<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">
    <so.len.duobao.customView.TopMenuBar
        android:id="@+id/top_menu_bar_personal_info"
        style="@style/topMenuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </so.len.duobao.customView.TopMenuBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/ll_head_pic_activity_personal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:text="@string/head_pic"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tv_level_activity_personal_info"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_5"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/right_arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/ll_username_activity_personal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:text="@string/username"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"/>

            <TextView
                android:id="@+id/tv_username_activity_personal_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/darker_gray"
                android:textSize="@dimen/dp_13"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/right_arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/ll_password_activity_personal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:text="@string/change_password"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/darker_gray"
                android:textSize="@dimen/dp_13"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/right_arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/ll_share_activity_personal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:text="@string/share"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/darker_gray"
                android:textSize="@dimen/dp_13"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/right_arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/ll_id_activity_personal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:text="@string/id"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"/>

            <TextView
                android:id="@+id/tv_id_activity_personal_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/darker_gray"
                android:textSize="@dimen/dp_13"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
    </LinearLayout>


</LinearLayout>